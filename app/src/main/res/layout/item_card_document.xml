<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center"

    android:orientation="horizontal"
    android:background="@color/whiteBodyColor"
    android:padding="@dimen/normalPadding">


    <TextView
        android:id="@+id/tvItemNumeroDoc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Numero"
        android:textColor="@color/statusBarColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvItemAsignado"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"


        android:layout_marginStart="8dp"

        android:text="DOC #"
        android:textColor="@color/frutorial_title"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvItemNumeroDoc" />

    <TextView
        android:id="@+id/tvItemDocumentoEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Estado"
        android:textColor="@color/frutorial_title"
        android:paddingVertical="@dimen/card_itemcourse_elevation"
        android:paddingHorizontal="@dimen/card_image_elevation"

        android:background="@color/color2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

